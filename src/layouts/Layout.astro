---
interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="application-name" content="Portfolio" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="default" />
    <meta name="apple-mobile-web-app-title" content="Carles Rojas' Portfolio" />
    <meta name="description" content="Carles Rojas' Portfolio 2023" />
    <meta name="format-detection" content="telephone=no" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="theme-color" content="#000000" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="viewport"
      content="minimum-scale=1, initial-scale=1, width=device-width, shrink-to-fit=no, user-scalable=no, viewport-fit=cover"
    />

    <link rel="apple-touch-icon" href="/appleIcon120.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/appleIcon180.png" />
    <link rel="apple-touch-icon" sizes="152x152" href="/appleIcon152.png" />
    <link rel="apple-touch-icon" sizes="167x167" href="/appleIcon167.png" />

    <link rel="manifest" href="/manifest.json" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="icon" type="image/svg+xml" href="/logo.svg" />

    <title>{title || 'Carles Rojas - Portfolio'}</title>
  </head>

  <body>
    <slot />
  </body>
</html>

<style is:global lang="scss">
  @import '../styles/mixins.scss';

  :root {
    --backgroundLight: hsl(0, 0%, 96%);
    --backgroundDark: hsl(230, 16%, 15%);
    --textLight: hsl(0, 0%, 0%);
    --textDark: hsl(0, 0%, 100%);
    --accent: hsl(208, 100%, 50%);

    --spacing: 1rem;

    @include tablet {
      --spacing: 3rem;
    }

    @include desktop {
      --spacing: min(3.5%, 4rem);
    }

    @include landscape {
      @include desktop {
        --spacing: min(10%, 4rem);
      }
    }
  }

  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
    overscroll-behavior: touch;
  }

  html {
    position: relative;
    height: 100%;
    width: 100%;
  }

  body {
    user-select: none;
    position: relative;
    height: 100%;
    width: 100%;
    background-color: var(--backgroundDark);
    color: var(--textDark);
    font-family: 'Montserrat', sans-serif;
    font-size: 16px;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;

    @include light {
      background-color: var(--backgroundLight);
      color: var(--textLight);
    }

    @include dark {
      background-color: var(--backgroundDark);
      color: var(--textDark);
    }
  }

  #__next {
    position: relative;
    height: 100%;
    width: 100%;
  }

  img,
  video,
  svg {
    display: block;
  }

  a {
    color: inherit;
    text-decoration: none;
  }

  // Autofill color
  :-webkit-autofill,
  :-webkit-autofill:hover,
  :-webkit-autofill:focus {
    transition: background-color 10000s;
    width: inherit;
    box-sizing: border-box;
    border: 0px solid rgba(255, 255, 255, 0);
    border-radius: 1000px;
    padding: 0;
    font-size: 1rem;
    -webkit-text-fill-color: var(--textDark);

    @include light {
      -webkit-text-fill-color: var(--textLight);
    }

    @include dark {
      -webkit-text-fill-color: var(--textDark);
    }
  }

  button {
    background: none;
    color: inherit;
    border: none;
    padding: 0;
    font: inherit;
    cursor: pointer;
    outline: inherit;
  }

  ul {
    list-style-type: none;
  }

  //Remove focus
  :focus {
    outline: none;
  }

  ::-moz-focus-inner {
    border: 0;
  }

  input {
    border: none;
  }

  // Chrome, Safari, Edge, Opera
  input::-webkit-outer-spin-button,
  input::-webkit-inner-spin-button {
    margin: 0;
    -webkit-appearance: none;
  }

  // Firefox
  input[type='number'] {
    -moz-appearance: textfield;
  }

  // width
  ::-webkit-scrollbar {
    height: 0;
    width: 0;
  }

  // Track
  ::-webkit-scrollbar-track {
    background: #f1f1f1;
  }

  // Handle
  ::-webkit-scrollbar-thumb {
    background: #888;
  }

  // Handle on hover
  ::-webkit-scrollbar-thumb:hover {
    background: #555;
  }
</style>
